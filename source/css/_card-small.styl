.content #article-grid-container .article-list-entry.small
  height: 140px
  width: 433px
  box-shadow: 0 1px 2px rgba(0,0,0,0.55)
  border-radius: 0px
  background: none repeat scroll 0% 0% #FCFCFF
  margin: 10px 14px

.content #article-grid-container .article-list-entry.small .thumbnail
  rounded-image(140px, 140px, 0px 0px 0px 0px)
  overflow: hidden
  display: inline-block
  float: left
  
.content #article-grid-container .article-list-entry.small .article-summary
  display: inline-block
  float: left
  padding: 4px 10px

.content #article-grid-container .article-list-entry.small h1, h2, h3
  font-family: "Oswald"
  margin: 0px 0px
  
.content #article-grid-container .article-list-entry.small h1
  width: 273px
  height: 108px
  font-size: 26px
  line-height: 34px
  padding-bottom: 3px
  font-weight: 400
  letter-spacing: -0.5px

.content #article-grid-container .article-list-entry.small .article-summary .header
  border-top: #CCC solid 1px
  padding: 2px 3px 0px

.content #article-grid-container .article-list-entry.small .article-summary .header h2
  line-height: 20px
  font-size: 14px
  color: #AAA
  font-weight: 300

.content #article-grid-container .article-list-entry.small .article-summary .header h2.category
  font-family "Oswald"
  display inline-block
  float left
  width 205px
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  
.content #article-grid-container .article-list-entry.small .article-summary .header h2.date
  font-family "Oswald"
  display: inline-block
  float: right
  width: auto